<h1> Top 40 movies from your search!</h1>

<%= form_with url: '/movies', method: :get, local: true do |form| %>
  <%= form.label :movie_title, "Search by Title:" %>
  <%= form.text_field :movie_title %>
  <%= form.submit "Find Top Rated Movies" %>
<% end %>

<ol>

  <% if @movie_search == "No Movies Found"%>
    <%= @movie_search %>
  <% else %>
    <% @movie_search.each do |movie| %>
      <li><%= link_to "#{movie.title}", "/movies/details?id=#{movie.id}" %><ul>
        <li><%= "Score: #{movie.vote}" %></li>
        </ul>
      </li>
    <% end %>
  <% end  %>
</ol>
